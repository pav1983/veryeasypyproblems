def n_sided_shape(n):
	if n == 10:
		return "decagon"
	elif n == 9:
		return "nonagon"
	elif n == 8:
		return "octagon"
	elif n == 7:
		return "heptagon"
	elif n == 6:
		return "hexagon"
	elif n == 5:
		return "pentagon"
	elif n == 4:
		return "square"
	elif n == 3:
		return "triangle"
	elif n == 2:
		return "semi-circle"
	elif n == 1:
		return "circle"
